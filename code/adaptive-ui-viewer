    <script __wid="WJG-niYd">
        webstrate.on("loaded", () => {
            let container = document.querySelector('#container');

            document.body.addEventListener("click", (event) => {
                if (event.target.closest('.remove')) {
                    event.target.closest('.device').remove();
                }
            });

            const addDevice = (deviceClass) => {
                let device = document.createElement("div");
                device.classList.add("device");
                device.classList.add(deviceClass);

                let frame = document.createElement("iframe");
                frame.setAttribute("src", `/adaptive-ui/?deviceClass=${deviceClass}`);
                device.appendChild(frame);

                let remove = document.createElement("div");
                remove.classList.add("remove");
                remove.innerHTML = '<i class="material-icons">delete</i>';
                device.appendChild(remove);

                container.appendChild(device);
            }

            document.querySelector('#add-tv').addEventListener("click", () => addDevice("tv"));
            document.querySelector('#add-laptop').addEventListener("click", () => addDevice("laptop"));
            document.querySelector('#add-tablet').addEventListener("click", () => addDevice("tablet"));
            document.querySelector('#add-smartphone').addEventListener("click", () => addDevice("smartphone"));
            document.querySelector('#add-smartwatch').addEventListener("click", () => addDevice("smartwatch"));

            let clearDevices = document.querySelector('#clear-devices')
            console.log('clear devices');
            clearDevices.addEventListener("click", () => {
                console.log('clear devices', container);
                document.querySelector('#container').innerHTML = "";
            });
        });
    </script>
